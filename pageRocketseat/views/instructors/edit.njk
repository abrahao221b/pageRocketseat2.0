{% extends "layout.njk" %}

{% block links %}
<link rel="stylesheet" href="/styles/menu.css">
{% endblock links %}

{% block title %}
<title>Page-Editor</title>
{% endblock title %}

{% block pages %}
<a href="/">
    Rocketseat Home
</a>
{% endblock pages %}

{% block content %}
<div class="card">

    <section 
        class="avatar" 
        style="background: url({{ instructor.avatar_url }}) no-repeat center center / cover">
    </section>

    <section class="details">
        <form method="POST" action="/instructors?_method=PUT">
            
            <h3>Editar Instrutor</h3>

            {% include "instructors/fields.njk" %}
            
            <input 
                type="hidden" 
                name="id" 
                value="{{ instructor.id }}"
            >
            
        </form>

        <form method="POST" action="/instructors?_method=DELETE" id="form-delete">
            <input type="hidden" name="id" value="{{ instructor.id }}">
            <button type="submit">Deletar</button>
        </form>

    </section>
    
</div>

{% include "deleteAlert.njk"%}

{% endblock content %}
